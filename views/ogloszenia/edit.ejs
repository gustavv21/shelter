<% include ../partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">Edytuj ogloszenie</div>
    <form class="ui form" action="/ogloszenia/<%= ogloszenie._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Tytuł</label>
            <input type="text" name="ogloszenie[title]" value="<%= ogloszenie.title %>">
        </div>
        <div class="field">
            <label>Zdjęcie</label>
            <input type="text" name="ogloszenie[image]" value="<%= ogloszenie.image %>">
        </div>
        <div class="field">
            <label>Numer kontaktowy</label>
            <input type="text" name="ogloszenie[number]" value="<%= ogloszenie.number %>">
        </div>
        <div class="field">
            <label>Opis ogłoszenia</label>
            <textarea type="text" name="ogloszenie[body]"><%= ogloszenie.body %></textarea>
        </div>
        <input class="ui purple big basic button" type="submit" value="Dodaj">
    </form>
</div>

<% include ../partials/footer %>